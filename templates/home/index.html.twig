{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% for game in games %}
        {{ game.title }}
        {{ game.releaseDate |date('d m Y') }}
        {{ game.editor.buisnessName }}
        <a href="{{ path('game_infos', {'id': game.id}) }}">More infos</a>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('game_edit', {'id': game.id}) }}">Edit</a>
            <a href="{{ path('game_delete', {'id': game.id}) }}">Delete</a>
        {% endif %}
    {% endfor %}

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('game_new') }}">Add new game</a>
    {% endif %}
{% endblock %}
